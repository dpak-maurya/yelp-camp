<%-include("../partials/header")%>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Comments for ...</h1>
		<div style="width: 30%;margin: 25px auto;">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<textarea name="comment[text]" class="form-control" rows="5" placeholder="write comment here"><%=comment.text%></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>		
				</div>
			</form>
			<a href="/campgrounds/<%=campground_id%>">Go Back</a>
		</div>	
	</div>	
</div>

