<%-include("../partials/header")%>

<div class="container">
	<div class="row card">
		<h1 style="text-align: center;">Add Comments to <%=campground.name.slice(0,12)%>...</h1>
		<div>
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" name="comment[text]" type="text"  rows="5" placeholder="comment will goes here"></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>		
				</div>
			</form>
			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</div>	
	</div>	
</div>

